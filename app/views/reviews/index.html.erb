<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80)">
  <div class="container">
    <h1>Restaurants</h1>
  </div>

</div>

<nav class="navbar navbar-expand-lg navbar-light bg-light">


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'Restaurants list', restaurants_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Restaurant card', restaurant_path(@restaurant), class: "nav-link" %>
      </li>
    </ul>

